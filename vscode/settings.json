{
  // General
  "window.zoomLevel": 2,
  "explorer.confirmDragAndDrop": false,
  "glassit.alpha": 220,
  "powershell.promptToUpdatePowerShell": false,

  // Themes
  "workbench.colorTheme": "Majira Strawberry Theme",
  "workbench.iconTheme": "material-icon-theme",

  // Git shit
  "git.confirmSync": false,
  "git.autofetch": true,

  // Sticky scroll
  "editor.stickyScroll.enabled": true,

  // Format shit
  "editor.insertSpaces": true,
  "editor.tabSize": 2,

  // Don't render characters on the minimap
  "editor.minimap.renderCharacters": false,
  "diffEditor.ignoreTrimWhitespace": false,

  // Hide the menu bar on the title of the window
  "window.menuBarVisibility": "compact",

  // Fonts and spacing
  "editor.fontSize": 15,
  "editor.fontLigatures": true,
  "editor.fontFamily": "'JetBrainsMono NF', Consolas, 'Courier New', monospace",
  "editor.lineHeight": 1.8,
  
  // Make VS Code smooth af
  "editor.cursorBlinking": "expand",
  "editor.cursorStyle": "block",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,

  // Ignore 'at-rule' warning for Tailwind @apply directive
  "scss.lint.unknownAtRules": "ignore",
  "css.lint.unknownAtRules": "ignore",

  // Update imports when refactoring garbage
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",

  // GitLens
  "gitlens.graph.minimap.additionalTypes": [
    "localBranches",
    "stashes",
    "remoteBranches"
  ],

  // Set default formatter by languages
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[dockercompose]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
